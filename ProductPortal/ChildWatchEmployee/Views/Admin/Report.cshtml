
@{
    ViewBag.Title = "Report";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<iframe id="reportFrame" src="~/Reports.aspx">

</iframe>

<style>
    iframe{
        width: 100%;
        height: 800px;
    }
    body{
        padding-bottom: 0px !important;
    }
    html{
        overflow-y: hidden;
    }
</style>

<script>

    $(function () {
        window.addEventListener("resize", adjustIframe);
        adjustIframe();
    });
    // Resize the iframe to fit the page.
    function adjustIframe() {
        var ctrlHeight = $('#externalHeader').height() + $('#externalFooter').height() + $('#navigator').height();

        $('#reportFrame').height(window.innerHeight - ctrlHeight - 100);

    }
</script>