<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" type="text/css" />
    <link href="~/Content/Site.css" rel="stylesheet" type="text/css" />
    <script src="~/Scripts/jquery-3.3.1.min.js"></script>
    <script src="~/Scripts/jquery.signalR-2.2.3.js"></script>
    <script src="~/signalr/hubs"></script>
</head>
<body>
    <nav class="navbar navbar-expand-sm bg-light navbar-light">
        <a class="navbar-brand" href="#">
            <img src="~/Images/logo.png" alt="YMCA Logo" style="width:80px; height:60px;">
        </a>
        <ul class="navbar-nav">
            <li class="nav-item">
                <a class="nav-link" href="~/Home/Index">Home</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="~/Registration/Register">Register</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="~/Registration/AddChild">Add Child</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="~/SignIn/SignOut">Sign Out</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="~/SignIn/SignIn" target="_blank">Login</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="~/Reports.aspx">Reports</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="">Help</a>
            </li>
        </ul>
    </nav>
    <div class="row justify-content-center">
        <div class="col-md-6">
            @{
                var message = TempData["Message"];
                if (message != null)
                {
        @:<div class="alert alert-success" role="alert">
                    message.ToString()
        @:
        </div>
                }
            }
            @{
                var message = TempData["Failure"];
                if (message != null)
                {
        @:<div class="alert alert-danger" role="alert">
                    message.ToString()
        @:
        </div>
                }
            }
            @RenderBody()
        </div>
    </div>
</body>
</html>
